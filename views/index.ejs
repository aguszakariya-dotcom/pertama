                        <h2> hallo <%= nama %> </h2>
                        <div class="row justify-content-center">
                            <div class="col-md-3 card m3"></div>
                            <div class="col-md-8 card m3">
                                <% if(message.success) { %>
                                    <div class="alert aler-success" role="alert"><%- message.success %>  </div>
                                <% ] %> 

                                <% if(message.error) { %>
                                    <div class="alert aler-danger" role="alert"><%- message.error %>  </div>
                                <% ] %> 

                                <div class="card border-0 shadow-sm rounded">
                                    <div class="card-body">
                                        <a href="post/create" class="btn btn-sm btn-success mb-3">Tambah Data</a>
                                        <table class="table table-borderd">
                                            <thead>
                                                <tr>
                                                    <th scope="col">No.</th>
                                                    <th scope="col">Date</th>
                                                    <th scope="col">Customer</th>
                                                    <th scope="col">Style</th>
                                                    <th scope="col">Code</th>
                                                    <th scope="col">Color</th>
                                                    <th scope="col">Size</th>
                                                    <th scope="col">Jumlah</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (data.length){
                                                    for(var i = 0; i < data.length; i++) {%>
                                                        <tr>
                                                            <th scope="row" class="text-center fs.5"><%= (i+1)%> </th>
                                                            <td><%= data[i].tanggal %></td>
                                                            <td><%= data[i].nama_customer %></td>
                                                            <td><%= data[i].style %></td>
                                                            <td><%= data[i].code %></td>
                                                            <td><%= data[i].warna %></td>
                                                            <td><%= data[i].size %></td>
                                                            <td><%= data[i].qty %></td>
                                                            <td class="text-center">
                                                                <a href="/post/edit/<%= data[i].id %>" class="btn btn-sm btn-primary">Edit</a>
                                                                <a onclick="return alert('Are You sure?')" href="/posts/delete/<%=data[i].id%>" class="btn btn-sm btn-danger">HAPUS</a>
                                                            </td>
                                                        </tr>
                                                    <%}
                                                } else {%> 
                                                    <tr>
                                                        <td colspan="4">
                                                            <div class="alert alert-danger" role="alert"> Data tidak ditemukan !</div>
                                                        </td>
                                                    </tr>
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

